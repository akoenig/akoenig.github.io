<!doctype html>
<html>
    <head>
        {{> meta}}
        <title>{{name}}</title>

        {{> styles}}
    </head>
    <body>
        <div class="fully fully-overlayed">
            <img class="fully--image"
                 src="images/fully-nyc.jpg"
                 alt="New York City Skyline">
        </div>

        <div class="landing-layout">
            <div class="logo">
                <img class="logo--blip"
                     src="images/blip.png"
                     alt="A little emblem with my hair styling">

                <img class="logo--avatar"
                      src="images/avatar.png"
                      alt="Me in real life">
            </div>

            <article class="article">
                {{{contents}}}
            </article>

            <ul class="channels">
                {{#each channels}}
                    <li class="channel-entry">
                        <a class="channel-entry--icon" href="{{uri}}" title="{{title}}">{{{icon}}}</a>
                    </li>
                {{/each}}
            </ul>
        </div>
    </body>
</html>